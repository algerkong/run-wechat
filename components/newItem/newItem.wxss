/* components/newItem/newItem.wxss */
.bottom20 {
    border-bottom: 20rpx solid #f1f1f1;
}

.click-bg {
    background-color: #eeeeee !important;
    transition: .2s;
}

.btn-click {
    filter: brightness(75%);
    transition: .1s;
}

.focus {
    padding: 10rpx 20rpx;

}



.focus>.item {
    padding: 0 20rpx;
    background-color: #ffffff;
    border-radius: 20rpx;
    box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.068);

}

.focus>.item>.item-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0;
}

.focus>.item>.item-top>image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.focus>.item>.item-top>.title {
    flex: 1;
    padding: 0 15rpx;
    box-sizing: border-box;
}

.focus>.item>.item-top>.title>.content {
    font-size: 20rpx;
    color: #aaaaaa;
}

.focus>.item>.item-top>.btn {
    border-radius: 30rpx;
    padding: 10rpx 30rpx;
    font-size: 25rpx;
    color: #25e0a2;
    background-color: #cffdee;
}

.focus>.item>.item-content>.item-tip>.tip-item {
    background-color: #c5e3ff;
    color: #3090eb;
    display: inline-block;
    padding: 10rpx 10rpx;
    border-radius: 50rpx;
    margin-right: 30rpx;
    font-size: 20rpx;
}

.focus>.item>.item-content>.item-tip>.tip-item>.icon {
    background-color: #3090eb;
    color: #ffffff;
    width: 30rpx;
    height: 30rpx;
    display: inline-block;
    border-radius: 50%;
    text-align: center;
    line-height: 30rpx;
}

.focus>.item>.item-bottom {
    display: flex;
    align-items: center;
    justify-content: start;
    color: #888888;
    border-bottom: 1rpx solid #eeeeee;
    padding: 10rpx 0;
}

.focus>.item>.item-bottom>.icon {
    margin-right: 30rpx;
    padding: 10rpx 10rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
}

.focus>.item>.item-msg>.msg-item {
    padding: 5rpx 0;
}

.focus>.item>.item-msg>.msg-item>view {
    display: inline;
}

.focus>.item>.item-msg>.msg-item>.name {
    font-size: 26rpx;
    color: #333333;
}

.focus>.item>.item-msg>.msg-item>.msg {
    font-size: 25rpx;
    color: #666666;
}

.focus>.item>.item-msg>.show-all {
    font-size: 28rpx;
    color: #aaaaaa;
    padding: 10px 0;
}