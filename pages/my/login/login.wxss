/* pages/my/login/login.wxss */

.main {
    height: 100vh;
    padding: 50rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-direction: column;
    box-sizing: border-box;
}

.title {
    color: #333333;
    font-size: 80rpx;
    width: 650rpx;
    font-weight: 100;
    flex: 1;
    padding: 50rpx 0;
}

.from {
    width: 650rpx;
    flex: 3;
}

.from input {
    width: 100% !important;
    box-sizing: border-box;
    padding: 10rpx 40rpx;
    height: 100rpx;
    font-size: 30rpx;
    margin-top: 30rpx;
    background-color: #eeeeee;
    color: #333333;
    border-radius: 100rpx;
}

.btn-page {
    flex: 1;
    width: 50%;
}

.btn-page>.btn {
    margin: 20rpx;
    background-color: #25e0a2;

    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 100rpx;
    font-size: 35rpx;
    color: #ffffff;
}

.btn-click {
    filter: brightness(80%);
}

.text {
    flex: 1;
    color: #25e0a2;
}