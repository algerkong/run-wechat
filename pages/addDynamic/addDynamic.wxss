/* pages/addDynamic/addDynamic.wxss */
.main {
    min-height: 100vh;
    background-color: #f5f5f5;
}

.content {
    padding: 30rpx;
    background-color: #ffffff;
}

.content>.input {
    display: block;
    width: 100%;
    min-height: 300rpx !important;
    padding: 20rpx 0;
    font-size: 33rpx;
    line-height: 50rpx;
    letter-spacing: 5rpx;
}

.content>.add-img {
    width: 220rpx;
    height: 220rpx;
    display: flex;
    background-color: #f5f5f5;
    font-size: 100rpx;
    justify-content: center;
    align-items: center;
    border-radius: 10rpx;
    color: #979797;
}

.bottom {
    height: 120rpx;
}

.bottom-bar {
    border-top: 1rpx solid #eeeeee;
    display: flex;
    flex-direction: row-reverse;
    height: 100rpx;
    align-items: center;
    width: 100vw;
    position: fixed;
    bottom: 0;
    left: 0;
    padding: 0 30rpx;
    box-sizing: border-box;
    background-color: #ffffff;
    z-index: 9999;

}

.bottom-bar>.btn {
    padding: 10rpx 30rpx;
    border-radius: 5rpx;
    background-color: #4CAF50;
    font-size: 30rpx;
    color: #ffffff;
}