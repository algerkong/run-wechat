/* pages/chat/chat.wxss */
.search {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    padding: 10rpx 30rpx;
    background-color: #ffffff;
    box-sizing: border-box;
}

.search-page {
    height: 80rpx;
}

.search input {
    padding: 10rpx 30rpx;
    font-size: 25rpx;
    background-color: #eeeeee;
    border-radius: 10rpx;
}

.search van-icon {
    position: absolute;
    right: 60rpx;
    top: 50%;
    bottom: 50%;
    margin: auto 0;
}